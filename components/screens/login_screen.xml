<?xml version="1.0" encoding="utf-8" ?>
<component name="login_screen" extends="Group" >
  <script type="text/brightscript" uri="pkg:/components/screens/login_screen.brs" />

  <interface>
      <field id="content"
        type="node"
        alwaysnotify="true"
        onChange="OnContentChange" />
        <field id="submit_username_button_pressed"
		      type="int"
		      alwaysnotify="true"
		      alias="submit_username_button.buttonSelected" />
        <field id="submit_button_pressed"
		    type="int"
		    alwaysnotify="true"
		    alias="submit_button.buttonSelected" />
  </interface>

<children >
    <Label
      id="login_label"
      text="Enter Username"
      translation="[300,400]"
    />
    <Label
      id='login_error'
      visible='false'
      translation='[850,300]'
    />
    <Keyboard
      id = "login_keyboard"
      translation='[250,500]'
     />
     <Button
      id = "submit_button"
      text = "Submit"
      visible = "false"
      translation = "[1200,950]"/>
      <Button
      id = "submit_username_button"
      text = "Submit"
      translation = "[1200,950]"/>
      

</children>
</component>