<?xml version="1.0" encoding="utf-8" ?>
<component name="homepage_screen" extends="Group" >
  <script type="text/brightscript" uri="pkg:/components/screens/homepage_screen.brs" />
  <interface>
    <field id="category_selected"
          type="assocarray"
          alias="category_list.itemSelected"
        />
  </interface>

<children >
    <RadioButtonList
      id="category_list"
      translation="[0, 100]"
      itemSize="[420,60]"
    >
      <ContentNode id = "categories" role = "content" >
        <ContentNode title = "DRAMA" feed_url="http://192.168.1.126:5500/roku_lessons/drama.json"/>
        <ContentNode title = "COMEDY" feed_url="http://192.168.1.126:5500/roku_lessons/comedy.json"/>
        <ContentNode title = "HORROR" feed_url="http://192.168.1.126:5500/roku_lessons/horror.json"/>
      </ContentNode>
    </RadioButtonList>

    <grid_screen
      id="grid_screen"
      visible="true"
      translation="[0,0]"
    />
</children>
</component>